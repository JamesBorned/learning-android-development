<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/SplashFragment">

    <fragment
        android:id="@+id/Fragment_1"
        android:name="com.fionova.myfirstapp.Fragment_1"
        android:label="Fragment_1" >
    </fragment>
    <fragment
        android:id="@+id/Fragment_2"
        android:name="com.fionova.myfirstapp.Fragment_2"
        android:label="Fragment_2" />
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.fionova.myfirstapp.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_LoginFragment_to_Fragment_1"
            app:destination="@id/Fragment_1" />
    </fragment>
    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.fionova.myfirstapp.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_RegisterFragment_to_Fragment_1"
            app:destination="@id/Fragment_1" />
    </fragment>
    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.fionova.myfirstapp.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_SplashFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/action_SplashFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment" />
        <action
            android:id="@+id/action_SplashFragment_to_Fragment_1"
            app:destination="@id/Fragment_1" />
    </fragment>
</navigation>